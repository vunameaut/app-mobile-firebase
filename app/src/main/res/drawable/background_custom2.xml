<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp nền sáng hơn (trắng) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu trắng -->
        </shape>
    </item>

    <!-- Lớp nền ban đầu -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="50dp" />
            <solid android:color="#333333" />
            <stroke
                android:width="4dp"
                android:color="#79DADA" />
            <corners android:radius="8dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
            <gradient
                android:startColor="#FFC0CB"
                android:endColor="#63C8C8"
                android:type="linear"
                android:angle="45" />
        </shape>
    </item>

    <!-- Lớp phủ đen -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80CAB4B4" />
        </shape>
    </item>

</layer-list>
