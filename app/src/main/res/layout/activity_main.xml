<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_background"
    android:padding="16dp">


    <!-- Back button -->

    <!-- Help text -->


    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="143dp"
        android:text="Need some help?"
        android:textColor="@color/light_text_color"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_logo" />

    <!-- Welcome text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Nhóm ..."
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Xin chào, chào mừng bạn đến với chúng tôi"
        android:textColor="@color/gray_text_color"
        android:textSize="16sp" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/edt_tk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/subText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/input_background"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_text_color" />

    <!-- Password Input -->

    <!-- Remind me later switch -->


    <LinearLayout
        android:id="@+id/remindMeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_mk"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remindMeText"
            android:layout_width="220dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:text="Remind me later"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/remindMeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:thumbTint="@color/switch_thumb_color"
            android:trackTint="@color/link_color" />
    </LinearLayout>

    <!-- Sign In Button -->
    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/remindMeLayout"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_button_color"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <!-- Social Media Sign In -->
    <LinearLayout
        android:id="@+id/socialSignInLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signInButton"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Facebook Sign In -->
        <ImageView
            android:id="@+id/facebookSignIn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_facebook" />

        <!-- Google Sign In -->
        <ImageView
            android:id="@+id/googleSignIn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_google" />

        <!-- Apple Sign In -->
        <ImageView
            android:id="@+id/appleSignIn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_iphone" />
    </LinearLayout>

    <!-- Sign Up Link -->
    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socialSignInLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Don’t have an account? Sign Up here"
        android:textColor="@color/link_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_mk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_tk"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/input_background"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_text_color" />

</RelativeLayout>